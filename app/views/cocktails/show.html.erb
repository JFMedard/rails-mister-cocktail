<div class="map" style="background-image: url('https://images.unsplash.com/photo-1493809842364-78817add7ffb?w=1200')"></div>
  <div class="container margin-top-negative">
    <div class="row">
      <div class="col-8">
        <div class="flat-show-card">
          <h1><%= @cocktail.name %></h1>
          <% @cocktail.doses.each do |cocktail| %>
          <p class="flat-show-address"><%=cocktail.ingredient.name%> | <%= cocktail.description  %></p>
          <% end %>
        </div>
        <div class="flat-show-card">

          <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=5 Queensmill Road London SW6 6JP&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C5 Queensmill Road London SW6 6JP&key=AIzaSyBtaHK-BLhBg7TruJu8iKk_wETqZMJM-GY')"></div>
        </div>

      </div>

      <div class="col-4">
        <div class="flat-show-card">
          <h5>Add a new dose!</h5>

          <form action="">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">From:</span>
              <input type="text" class="form-control" placeholder="12/10/2017" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mt-2">
              <span class="input-group-addon" id="basic-addon1">To:</span>
              <input type="text" class="form-control" placeholder="18/10/2017" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
          </form>
        </div>
        <div class="flat-show-card">
          <h3>Details</h3>
          <div class="flex">
            <div class="flex">
              <i class="material-icons mr-2">people</i><span><%=%></span>
            </div>
            <div class="flex ml-3">
              <i class="material-icons mr-2">euro_symbol</i> <%=%>
            </div>
          </div>
        </div>
        <div class="flat-show-card">
          <div class="flex-align">
            <h6 class="no-mb">Share</h6>

            <div class="flex">
              <i class="fa fa-facebook-square fa-2x mr-2"></i>
              <i class="fa fa-twitter-square fa-2x mr-2"></i>
              <i class="fa fa-pinterest-square fa-2x mr-2"></i>
              <i class="fa fa-envelope-square fa-2x"></i>
            </div>
          </div>
        </div>
        <div class="container">


          <br>

          <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.input :description %>
          <%= f.association :ingredient %>
          <%= f.submit class: "btn btn-primary"%>
          <% end %>

          <%= link_to "Back", cocktails_path %>

        </div>
      </div>
    </div>
</div>
